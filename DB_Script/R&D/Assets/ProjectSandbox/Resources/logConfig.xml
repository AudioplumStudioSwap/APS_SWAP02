<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<configuration>
	<!-- LAYOUTS -->
	<layout name="Text">
		<value>%filename (%fileline) [%verbosity] : %block%message</value>
		<verbosity min="11" max="11" align="center" trim="right" />
		<filename min="30" max="30" align="left" trim="left" />
		<fileline min="4" max="4" align="center" trim="left" />
		<block begin="+- " content-prefix="|  " end="+- " />
	</layout>
	
	<!-- LOGGERS -->
	<logger type="Aube.UnityConsoleLogger" verbosity="Debug" />
	
	<logger type="Aube.FileLogger" verbosity="Debug" layout-ref="Text">
		<file>aube_sandbox.log</file>
	</logger>
</configuration>
